<% layout('/layouts/boilerplate.ejs') -%>
<body>
  <div class="row">
    <div class=" col-md-8 offset-md-2">
      <h3 class="mt-3">Create a New Listing</h3>
      <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" >
        <div class="mb-3">
          <label for="title">Title</label>
          <input name="listing[title]" placeholder="Enter name" type="text" class="form-control " required />
          <div class="invalid-feedback">Please choose a unique and valid Title.</div>
          <div class="valid-feedback">Looks good</div>

        </div>
        <div class="mb-3">
          <label for="description">Description</label>
          <textarea name="listing[description]" placeholder="Enter description" minlength="4" class="form-control " required></textarea>
          <div class="invalid-feedback">Please enter a message in the textarea.</div>
        </div>
        
        <div class="mb-3">
          <label for="image" class="form-label">Upload Image/file</label>
          <input name="listing[image]" class="form-control" placeholder="Upload files" type="file"  />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4 ">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="&#8377;" type="number" min="1"  class="form-control " required />
            <div class="invalid-feedback">Please Enter a valid amount.</div>
            <div class="valid-feedback">Looks good</div>
          </div>
          <div class="mb-3 col-md-8 ">  
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="e.g India" type="text" class="form-control " required />
            <div class="invalid-feedback">Please select a valid Country.</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" type="text" placeholder="e.g Jaipur" class="form-control " required />
          <div class="invalid-feedback">Please provide a valid city.</div>
        </div>
        <button class="btn btn-danger add mt-3 mb-3">Add</button>
      </form>
    </div>
  </div>
</body>
